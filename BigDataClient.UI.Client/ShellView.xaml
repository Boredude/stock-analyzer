    <controls:MetroWindow.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource InTransition}"/>
        </EventTrigger>
    </controls:MetroWindow.Triggers>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="104"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- logo -->
        <Canvas x:Name="Logo" 
                Grid.Row="0" 
                RenderTransformOrigin="0.5,0.5"
                Margin="5,3">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <TextBlock Text="STOCK " TextWrapping="NoWrap" Foreground="#FFC4CFD6" FontSize="72" Opacity="0.85" Canvas.Left="0" Canvas.Top="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="80" Width="225" TextAlignment="Left" FontWeight="Bold" />
            <TextBlock Text="ANALYZER" TextWrapping="NoWrap" Foreground="#FFC4CFD6" FontSize="72" Opacity="0.85" Height="80" TextAlignment="Left" FontWeight="Normal" Width="525" Canvas.Left="240" Canvas.Top="5"/>
        </Canvas>

        <!-- Main Region -->
        <controls:MetroAnimatedSingleRowTabControl Grid.Row="1"
                                                   x:Name="MainContent">
            <!-- Stocks -->
            <TabItem Header="Stocks">
                <ContentControl Margin="5,3"
                                regions:RegionManager.RegionName="{x:Static infrastructure:RegionNames.StocksRegion}"/>
            </TabItem>

            <TabItem IsEnabled="True" IsHitTestVisible="False" Header=" | ">
            </TabItem>

            <TabItem Header="Results">
                <ContentControl Margin="5,3"
                                regions:RegionManager.RegionName="{x:Static infrastructure:RegionNames.ResultsRegion}"/>
            </TabItem>
            <controls:MetroAnimatedSingleRowTabControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </controls:MetroAnimatedSingleRowTabControl.RenderTransform>
        </controls:MetroAnimatedSingleRowTabControl>
        
        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>STOCK ANALYZER</StatusBarItem>
            <Separator Style="{StaticResource MetroStatusBarSeparator}" />
            <StatusBarItem Content="{Binding StatusBarText}" />
        </StatusBar>
    </Grid>
</controls:MetroWindow>
